<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="create_spare_parts_orders_table_01" author="Olga Tysevich">
        <createTable tableName="spare_parts_orders">
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="spareParts_KEY" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="departure_date" type="date"/>

            <column name="delivery_date" type="date"/>
        </createTable>

    </changeSet>

    <changeSet author="Olga Tysevich" id="addPrimaryKey-spare_parts_orders">
        <addPrimaryKey tableName="spare_parts_orders"
                       columnNames="order_id,spareParts_KEY"
                       constraintName="primary_key_constraint"/>
    </changeSet>

    <changeSet author="Olga Tysevich" id="addSparPartForeign_key_table_repairs">
        <addForeignKeyConstraint
                baseTableName="spare_parts_orders"
                baseColumnNames="spareParts_KEY"
                constraintName="FKo47r6vtvc57p59ljpbq0v86ay"
                referencedTableName="spare_parts"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="Olga Tysevich" id="addOrderForeign_key_table_repairs">
        <addForeignKeyConstraint
                baseTableName="spare_parts_orders"
                baseColumnNames="order_id"
                constraintName="FKq1ow3b69xtbvbp5foqchjcl83"
                referencedTableName="orders"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>