<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
        version="1.0">

    <persistence-unit name="project">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>it.academy.entities.Model</class>
        <class>it.academy.entities.Brand</class>
        <class>it.academy.entities.DeviceType</class>
        <class>it.academy.entities.Buyer</class>
        <class>it.academy.entities.Salesman</class>
        <class>it.academy.entities.Device</class>
        <class>it.academy.utils.enums.RepairStatus</class>
        <class>it.academy.utils.enums.RepairCategory</class>
        <class>it.academy.entities.RepairType</class>
        <class>it.academy.entities.SparePart</class>
        <class>it.academy.entities.SparePartsOrder</class>
        <class>it.academy.entities.LiquidationCertificate</class>
        <class>it.academy.entities.Repair</class>
        <class>it.academy.entities.Account</class>
        <class>it.academy.entities.ServiceCenter</class>
        <class>it.academy.entities.Requisites</class>
        <class>it.academy.entities.BankAccount</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mySql://localhost:3306/project?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Helga8707!"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>

    </persistence-unit>

</persistence>
